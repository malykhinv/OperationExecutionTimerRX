<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TableTitleText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/row_height_large</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/row_margin_top</item>
        <item name="android:padding">@dimen/row_padding</item>
        <item name="android:paddingStart">@dimen/row_side_padding</item>
        <item name="android:paddingEnd">@dimen/row_side_padding</item>
    </style>

    <style name="TableTimeText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TableRowTitleText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TableCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/row_padding</item>
        <item name="android:paddingEnd">@dimen/row_padding</item>
    </style>

    <style name="ProgressBarIndeterminateHorizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/progressbar_height</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:progress">100</item>
        <item name="android:progressDrawable">@drawable/progressbar_drawable</item>
        <item name="android:progressTint">@color/lime_200</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="RowTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@drawable/row_title_background</item>
        <item name="android:paddingStart">@dimen/row_side_padding</item>
        <item name="android:paddingEnd">@dimen/row_side_padding</item>
    </style>

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:background">@drawable/table_background</item>
    </style>
</resources>